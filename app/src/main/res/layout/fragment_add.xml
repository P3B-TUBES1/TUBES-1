<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operator"
        android:textSize="20dp"
        android:padding="5dp"/>
    <Spinner
        android:id="@+id/spinner_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_operator"
        android:padding="5dp">
    </Spinner>

    <TextView
        android:id="@+id/tv_operand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operator"
        android:textSize="20dp"
        android:layout_below="@+id/tv_operator"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/et_operand"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@+id/tv_operand"
        android:layout_below="@+id/spinner_add"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_operand"
        android:layout_marginTop="5dp"
        android:text="Submit"/>
</RelativeLayout>